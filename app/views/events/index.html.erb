<h1 align="center" class="text-primary">Listing all Events</h1>

<% @events.each do |event| %>
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <div class="well well-lg">
        <div class="event-title">
          <%= link_to event.title, event_path(event) %>
        </div>
        <div class="event-body mb">
          <%= event.description %>
        </div>
        <%= link_to 'Attend Event', root_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
  <% end %>
</table>